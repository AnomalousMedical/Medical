<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>..\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'PublicRelease|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>..\PublicRelease\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProductVersion>10.0.0</ProductVersion>
    <SchemaVersion>2.0</SchemaVersion>
    <ProjectGuid>{D8592C64-2FB3-422B-A7B0-F0C62E728221}</ProjectGuid>
    <OutputType>Exe</OutputType>
    <RootNamespace>BulletWrapper</RootNamespace>
    <AssemblyName>BulletWrapper</AssemblyName>
    <TargetFrameworkVersion>v2.0</TargetFrameworkVersion>
  </PropertyGroup>
  
  <!-- PiperJBO app specific info -->
  <PropertyGroup>
    <AppBundleName>AnomalousMedicalMac.app</AppBundleName>
	<AppBundleOutDir>../bin/$(Configuration)</AppBundleOutDir>
  </PropertyGroup>
  
  <ItemGroup>
	<!-- These items will go in the Contents/Resources folder -->
	<MonoBundleFiles Include="BundleSource/Contents/Resources/AnomalousMedical.exe.config" />
	<ResourceFiles Include="BundleSource/Contents/Resources/Skull.icns" />
	<ResourceFiles Include="..\..\$(Configuration)\AnomalousMedical.exe" />

    <!-- These items will go in the Contents/MacOS folder-->
	<MacOSFiles Include="BundleSource/Contents/MacOS/AnomalousMedical" />
	<MakeExecutable Include="$(AppBundleOutDir)/$(AppBundleName)/Contents/MacOS/AnomalousMedical" />

	<!-- These items will go in the Contents folder. -->
	<ContentsFiles Include="BundleSource/Contents/Info.plist" />
  </ItemGroup>
  
  <!-- Medical App Bundle -->
  
  <!-- Common items for Resources folder. -->
  <ItemGroup>
    
  </ItemGroup>
  
  <!-- Common frameworks, items and target. -->
  <ItemGroup>
	<!-- Mono -->
	<MonoFrameworkFiles Include="..\..\../Dependencies/Mono/OSXBuild/bin/Mono.framework/**/*"/>
	<!-- Ogre -->
	<OgreFrameworkFiles
        Include="..\..\../Dependencies/Ogre/OSXBuild/lib/macosx/Release/Ogre.framework/Versions/Current/**/*"
        Exclude="..\..\../Dependencies/Ogre/OSXBuild/lib/macosx/Release/Ogre.framework/Versions/Current/**/*.h;..\..\../Dependencies/Ogre/OSXBuild/lib/macosx/Release/Ogre.framework/Versions/Current/Resources/ogrelogo.png"/>
	<!-- Gl Render System -->
	<GlRenderSystemFrameworkFiles
        Include="..\..\../Dependencies/Ogre/OSXBuild/lib/macosx/Release/RenderSystem_GL.framework/Versions/Current/**/*"
        Exclude="..\..\../Dependencies/Ogre/OSXBuild/lib/macosx/Release/RenderSystem_GL.framework/Versions/Current/**/*.h"/>
  </ItemGroup>

  <UsingTask TaskName="SetupFramework" AssemblyFile="..\..\..\Dependencies\MSBuild\Anomalous\bin\Release\AnomalousMSBuild.dll" />
  <Target Name="CopyFrameworks">
	<!-- Mono -->
	<Copy SourceFiles="@(MonoFrameworkFiles)"
        DestinationFolder="$(AppBundleOutDir)/$(AppBundleName)/Contents/Mono/%(RecursiveDir)" />
	<!-- Ogre -->
	<Copy SourceFiles="@(OgreFrameworkFiles)"
        DestinationFolder="$(AppBundleOutDir)/$(AppBundleName)/Contents/Frameworks/Ogre.framework/Versions/1.10.0/%(RecursiveDir)" />
    <SetupFramework
        BasePath="$(AppBundleOutDir)/$(AppBundleName)/Contents/Frameworks/Ogre.framework"
        CurrentVersion="1.10.0"
        MainBinaryName="Ogre"/>
	<!-- Gl Render System -->
	<Copy SourceFiles="@(GlRenderSystemFrameworkFiles)"
        DestinationFolder="$(AppBundleOutDir)/$(AppBundleName)/Contents/Frameworks/RenderSystem_GL.framework/Versions/1.10.0/%(RecursiveDir)" />
    <SetupFramework
        BasePath="$(AppBundleOutDir)/$(AppBundleName)/Contents/Frameworks/RenderSystem_GL.framework"
        CurrentVersion="1.10.0"
        MainBinaryName="RenderSystem_GL"/>
  </Target>
  
  <!-- App Bundle task -->
  
  <!-- Generic App bundle build task -->
  <Target Name="Build">
    <!-- Create bundle -->
	<Copy SourceFiles="@(ContentsFiles)" DestinationFolder="$(AppBundleOutDir)/$(AppBundleName)/Contents/%(RecursiveDir)" />
    <Copy SourceFiles="@(ResourceFiles)" DestinationFolder="$(AppBundleOutDir)/$(AppBundleName)/Contents/Resources/%(RecursiveDir)" />
    <Copy SourceFiles="@(MonoBundleFiles)" DestinationFolder="$(AppBundleOutDir)/$(AppBundleName)/Contents/MonoBundle/%(RecursiveDir)" />
	<Copy SourceFiles="@(MacOSFiles)" DestinationFolder="$(AppBundleOutDir)/$(AppBundleName)/Contents/MacOS/%(RecursiveDir)" />
	
	<!-- Call CopyFrameworks task -->
	<CallTarget Targets="CopyFrameworks" />
	
	<!-- Make Executable -->
	<Exec Command="chmod 755 &quot;%(MakeExecutable.Identity)&quot;" />
  </Target>
  
  <!-- Clean Task, Deletes the app bundle. -->
  <Target Name="Clean">
	<RemoveDir
		Directories="$(AppBundleOutDir)/$(AppBundleName)"
	/>
  </Target>
</Project>

    <OutputType>Exe</OutputType>
    <RootNamespace>BulletWrapper</RootNamespace>
    <AssemblyName>BulletWrapper</AssemblyName>
    <TargetFrameworkVersion>v2.0</TargetFrameworkVersion>
  </PropertyGroup>
  <!-- Create the App Bundle -->
  <!-- General Information -->
  <PropertyGroup>
    <AppBundleName>Pipers Joint Based Occlusion.app</AppBundleName>
	<AppBundleOutDir>../../$(Configuration)</AppBundleOutDir>
  </PropertyGroup>
  
  <!-- These items will go in the Contents folder. -->
  <ItemGroup>
	<ContentsFiles Include="BundleSource/Contents/Info.plist" />
  </ItemGroup>
  
  <!-- These items will go in the Contents\Resources folder. -->
  <ItemGroup>
	<ResourceFiles Include="BundleSource/Contents/Resources/PiperJBO.exe.config" />
	<ResourceFiles Include="BundleSource/Contents/Resources/Skull.icns" />
    <ResourceFiles Include="..\..\Release\BulletPlugin.dll" />
  </ItemGroup>
  
  <!-- These items will go in the Contents\MacOS folder-->
  <ItemGroup>
	<MacOSFiles Include="BundleSource/Contents/MacOS/PiperJBO" />
  </ItemGroup>
  
  <!-- These items will go in the Contents\Frameworks folder. -->
  <ItemGroup>
	<!-- Mono -->
	<FrameworksFiles Include="/Users/andrewpiper/Development/Dependencies/Mono/OSXBuild/**/*"
					 Exclude="/Users/andrewpiper/Development/Dependencies/Mono/OSXBuild/fixmonopaths.build;/Users/andrewpiper/Development/Dependencies/Mono/OSXBuild/MakeFramework.sh"/>
  </ItemGroup>
  
  <!-- Build task to actually create the bundle -->
  <Target Name="Build">
    <!-- Create bundle -->
	<Copy SourceFiles="@(ContentsFiles)" DestinationFolder="$(AppBundleOutDir)/$(AppBundleName)/Contents" />
    <Copy SourceFiles="@(ResourceFiles)" DestinationFolder="$(AppBundleOutDir)/$(AppBundleName)/Contents/Resources" />
	<Copy SourceFiles="@(MacOSFiles)" DestinationFolder="$(AppBundleOutDir)/$(AppBundleName)/Contents/MacOS" />
	<Copy SourceFiles="@(FrameworksFiles)" DestinationFolder="$(AppBundleOutDir)/$(AppBundleName)/Contents/Frameworks/%(RecursiveDir)" />
  </Target>
  
  <!-- Clean Task, Deletes the app bundle. -->
  <Target Name="Clean">
	<RemoveDir
		Directories="$(AppBundleOutDir)/$(AppBundleName)"
	/>
  </Target>
</Project>